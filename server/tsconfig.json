{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es6"],
    "module": "commonJS",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "test-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
